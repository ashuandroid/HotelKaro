<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context=".Activity.OtpVerification">

    <android.support.design.widget.AppBarLayout
        android:fitsSystemWindows="true"
        android:id="@+id/app_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_otp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_white"
        app:title="HotelKaro"
        android:theme="@style/ToolbarTheme"
        app:titleTextColor="@color/color_black">

    </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_otp"
        android:id="@+id/ll_otp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Otp Verification"
            android:fontFamily="@font/proximanova_regular"
            android:textColor="@color/color_gray_dark"
            android:textSize="23.3sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="@font/proximanova_regular"
                android:hint="XXXX"
                android:textColor="@color/color_gray_light"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent"
                android:src="@drawable/otp_24dp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:background="#9f9e9e" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="sans-serif-light"
            android:text="Otp will send on your mobile number"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_10sdp"
            android:textStyle="italic" />

    </LinearLayout>




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bg"
        android:text="Verify"
        android:id="@+id/btn_verify"
        android:textColor="@color/color_white"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_below="@+id/ll_otp"
        android:textAllCaps="false"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/proximanova_regular"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"/>





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13.3sp"
        android:background="@null"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/proximanova_regular"
        android:textColor="@color/color_gray_dark"
        android:text="Resend Otp"
        android:layout_above="@id/ll1"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94.2dp"
        android:id="@+id/ll1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/gradient_bg"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
           android:fontFamily="@font/proximanova_regular"
            android:textStyle="normal"
            android:gravity="center_horizontal"
            android:textColor="@color/color_white"
            android:text="We are verifying your mobile number"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/circle"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/circle"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/circle"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/circle"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>