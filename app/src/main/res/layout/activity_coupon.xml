<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".Activity.Coupon">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:elevation="@dimen/_2sdp"
        android:id="@+id/card_toolbar"
        app:cardCornerRadius="0dp"
        app:cardUseCompatPadding="false"
        app:cardBackgroundColor="@color/color_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/back_24dp"/>

            <TextView
                android:id="@+id/title"
                android:layout_toEndOf="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="@color/color_black"
                android:text="Apply Coupons"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/proximanova_regular"
                android:textSize="@dimen/_12sdp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_toolbar"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get 10% Off"
                android:fontFamily="@font/proximanova_regular"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sdp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I will show how to create vertical and horizontal lines in android using android XML"
                android:fontFamily="@font/proximanova_regular"
                android:textColor="@color/color_gray_dark"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>


        <Button
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:text="Apply"
            android:textColor="@color/color_gray_dark"
            android:textAllCaps="false"
            android:fontFamily="@font/proximanova_regular"
            android:layout_marginStart="@dimen/_12sdp"
            android:background="@drawable/button_shap"/>


    </LinearLayout>



</RelativeLayout>